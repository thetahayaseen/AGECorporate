@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row text-center mb-0">
            <div class="col-12">
                <h2 class="section-title">Account</h2>
                <h3 class="section-sub-title">Log out</h3>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary solid blank">Click here to Logout</button>
                    </form>
                }
                else
                {
                    <p>You have successfully logged out of the application.</p>
                }
            </div>
        </div>
    </div>
</section>
