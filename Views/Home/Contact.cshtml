@model Query

@{
	ViewData["Title"] = "Contact";
}

<section id="main-container" class="main-container">
    <div class="container">

        <div class="row text-center mb-0">
            <div class="col-12">
                <h2 class="section-title">Contact Details</h2>
                <h3 class="section-sub-title">Reach Out To Us</h3>
            </div>
        </div>
        <!--/ Title row end -->

        <div class="row mt-0">
            <div class="col-md-6 mb-3">
                <div class="ts-service-box-bg text-center h-100">
                    <span class="ts-service-icon icon-round">
                        <i class="fa fa-envelope mr-0"></i>
                    </span>
                    <div class="ts-service-box-content">
                        <h4>Email Us</h4>
                        <p>info@alghazalienterprises.com</p>
                    </div>
                </div>
            </div><!-- Col 2 end -->

            <div class="col-md-6 mb-3">
                <div class="ts-service-box-bg text-center h-100">
                    <span class="ts-service-icon icon-round">
                        <i class="fa fa-phone-square mr-0"></i>
                    </span>
                    <div class="ts-service-box-content">
                        <h4>Call Us</h4>
                        <p>(+92) 333-3065-301</p>
                    </div>
                </div>
            </div><!-- Col 3 end -->

        </div><!-- 1st row end -->

        <div class="row mt-5">
            <div class="col-md-12">
                <h3 class="column-title">Reach out anytime</h3>
                <form id="contact-form" method="post" role="form">
                    @Html.AntiForgeryToken()
                    <div class="error-container"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" class="form-control form-control-name" placeholder="Enter your name" type="text">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control form-control-email" placeholder="Enter your email" type="email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Contact Number</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-subject" type="tel" placeholder="Enter your contact number">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>  
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control form-control-message" asp-for="Message" placeholder="Enter your message" rows="10"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="text-right">
                        <br>
                        <button class="btn btn-primary solid blank" type="submit">Send Message</button>
                    </div>
                </form>
            </div>
        </div>

    </div><!-- Conatiner end -->
</section><!-- Main container end -->
