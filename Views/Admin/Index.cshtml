@using AGECorporate.View_Models
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin";
}

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row text-center mb-0">
            <div class="col-12">
                <h2 class="section-title">Admin</h2>
                <h3 class="section-sub-title">Navigation</h3>
            </div>
        </div>
        <div class="row mt-0">
            <a asp-action="Queries" class="col-md-4 mb-3">
                <div class="ts-service-box-bg text-center h-100">
                    <span class="ts-service-icon icon-round">
                        <i class="fa fa-envelope mr-0"></i>
                    </span>
                    <div class="ts-service-box-content">
                        <h4>Queries</h4>
                        <p>@Model.countOfQueries</p>
                    </div>
                </div>
            </a>
            <a asp-action="ProductCategories" class="col-md-4 mb-3">
                <div class="ts-service-box-bg text-center h-100">
                    <span class="ts-service-icon icon-round">
                        <i class="fa fa-tags mr-0"></i>
                    </span>
                    <div class="ts-service-box-content">
                        <h4>Product Categories</h4>
                        <p>@Model.countOfProductCategories</p>
                    </div>
                </div>
            </a>
            <a asp-action="Products" class="col-md-4 mb-3">
                <div class="ts-service-box-bg text-center h-100">
                    <span class="ts-service-icon icon-round">
                        <i class="fa fa-shopping-cart mr-0"></i>
                    </span>
                    <div class="ts-service-box-content">
                        <h4>Products</h4>
                        <p>@Model.countOfProducts</p>
                    </div>
                </div>
            </a>
        </div>
        </div>
</section>
