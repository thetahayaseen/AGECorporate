@using AGECorporate.View_Models
@model ProductFormViewModel

@{
    ViewData["Title"] = "Create Product";
}

<section id="main-container" class="main-container">
    <div class="container">

        <div class="row text-center mb-0">
            <div class="col-12 mb-0">
                <h2 class="section-title">Products</h2>
                <h3 class="section-sub-title">Create A New Product</h3>
            </div>
        </div>

        <div class="row mt-0">
            <div class="col-md-12">
                <form id="create-category-form" asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data" role="form">
                    @Html.AntiForgeryToken()
                    <div class="error-container"></div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Upload Cover Image</label>
                                <input asp-for="product!.ImagePath" class="form-control form-control-name" type="file" accept="image/*" name="imageFile" />
                                <span asp-validation-for="product!.ImagePath" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Title</label>
                                <input asp-for="product!.Title" class="form-control form-control-name" placeholder="Enter your title" type="text" />
                                <span asp-validation-for="product!.Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Product Category</label>
                                <select asp-for="product!.ProductCategoryId" class="form-control form-control-name" asp-items="@(new SelectList(Model.productCategories, "Id", "Title"))">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="product!.ProductCategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control form-control-message" asp-for="product!.Description" placeholder="Enter your Description" rows="10"></textarea>
                        <span asp-validation-for="product!.Description" class="text-danger"></span>
                    </div>
                    <div class="text-right">
                        <br>
                        <button class="btn btn-primary solid blank" type="submit">Create</button>
                    </div>
                </form>
            </div>
        </div>

    </div><!-- Container end -->
</section><!-- Main container end -->
